# 실행 제어
APPLY_TARGETS=D01,D06,D10,D11,D08,D07,D25
RUN_CHECKS=Y

# D01
NEW_PASS=StrongRootPass!234

# D06
COMMON_USER=shared
COMMON_HOST=%
NEW_USER=app_user
NEW_HOST=10.0.0.%
PRIV_SCOPE=DB
DB_NAME=appdb
PRIV_LIST=SELECT,INSERT,UPDATE
# PRIV_SCOPE=TABLE 일 때만 필요
# TABLE_NAME=orders

# D10
TARGET_USER=app_user
ALLOW_HOST=10.0.0.%
MODE=DROP
# fallback 대비 NEW_PASS 재사용 권장

# D11
TARGET_HOST=10.0.0.%
KEEP_SCOPE=DB
KEEP_DB=appdb
KEEP_PRIV_LIST=SELECT,INSERT,UPDATE
# KEEP_SCOPE=TABLE 일 때만 필요
# KEEP_TABLE=orders

# D08 (아래 3가지 방식 중 1개 선택)
# 1) 단일 계정
# D08_TARGET_USER=app_user
# D08_TARGET_HOST=10.0.0.%
# D08_TARGET_PASS=NewUserPass!234
# 2) 복수 계정
# TARGET_ACCOUNTS_CSV=user1@10.0.0.%:Pass!1,user2@10.0.0.%:Pass!2
# 3) 취약 계정 전체 일괄 전환
AUTO_FIX_ALL=Y
DEFAULT_TARGET_PASS=DefaultStrong!234

# D07 (자동 탐지 실패 시 지정)
# MY_CNF=/etc/my.cnf
MYSQL_RUN_USER=mysql

# D25
VENDOR_LATEST_VERSION=8.0.44
DO_UPDATE=N
RESTART_MYSQL=N
